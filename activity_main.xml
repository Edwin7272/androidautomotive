<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a1a"
    android:padding="32dp">

    <!-- Logo -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:contentDescription="@string/app_name"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="48sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        app:layout_constraintTop_toBottomOf="@id/ivLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Contenedor de selección de emisoras -->
    <LinearLayout
        android:id="@+id/emissoras_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <!-- Botón Sevilla -->
        <Button
            android:id="@+id/btnSevilla"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="@string/sevilla"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#FF6B35"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="16dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <!-- Botón Málaga -->
        <Button
            android:id="@+id/btnMalaga"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="@string/malaga"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#FF6B35"
            android:textColor="#FFFFFF"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    </LinearLayout>

    <!-- Estado -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ready"
        android:textSize="24sp"
        android:textColor="#CCCCCC"
        app:layout_constraintTop_toBottomOf="@id/emissoras_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Emisora seleccionada -->
    <TextView
        android:id="@+id/tvEmisora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona una emisora"
        android:textSize="18sp"
        android:textColor="#FF6B35"
        app:layout_constraintTop_toBottomOf="@id/tvStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Contenedor de botones de control -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvEmisora"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp">

        <!-- Botón Play/Pause -->
        <Button
            android:id="@+id/btnPlay"
            android:layout_width="240dp"
            android:layout_height="100dp"
            android:text="@string/play"
            android:textSize="24sp"
            android:textStyle="bold"
            android:backgroundTint="#FF6B35"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="24dp"
            android:enabled="false"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <!-- Botón Stop -->
        <Button
            android:id="@+id/btnStop"
            android:layout_width="240dp"
            android:layout_height="100dp"
            android:text="@string/stop"
            android:textSize="24sp"
            android:textStyle="bold"
            android:backgroundTint="#444444"
            android:textColor="#FFFFFF"
            android:enabled="false"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
